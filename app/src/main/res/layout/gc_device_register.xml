<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_layout__background_colour"
    android:layout_margin="@dimen/activity_default_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:textSize="@dimen/app_default_text_view_text_size"
            android:textColor="@color/app_default_header_text_color"
            android:text="@string/register_layout_header_text"
            />



        <EditText
            android:id="@+id/register_layout_display_name_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
            android:background="@drawable/edit_text_focused"
            android:hint="@string/register_layout_display_name_edit_text_hint"
            android:textColorHint="@color/app_default_edit_text_hint_color"
            android:textColor="@color/app_default_text_color"
            />

        <EditText
            android:id="@+id/register_layout_user_email_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
            android:background="@drawable/edit_text_focused"
            android:hint="@string/register_layout_user_email_edit_text_hint"
            android:textColorHint="@color/app_default_edit_text_hint_color"
            android:textColor="@color/app_default_text_color"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/register_layout_user_pwd_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
            android:maxLength="@string/app_default_mobile_number_length"
            android:background="@drawable/edit_text_focused"
            android:hint="@string/register_layout_pwd_edit_text_hint"
            android:textColorHint="@color/app_default_edit_text_hint_color"
            android:textColor="@color/app_default_text_color"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/register_layout_display_location_info_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
            android:background="@drawable/edit_text_focused"
            android:hint="@string/register_layout_location_display_info_edit_text_hint"
            android:textColorHint="@color/app_default_edit_text_hint_color"
            android:textColor="@color/app_default_text_color"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout_display_is_adskite_user"
            android:text="@string/register_layout_is_adskite_text_hint"
            android:checked="false"/>

        <EditText
            android:id="@+id/register_layout_display_adskite_user_pwd"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
            android:background="@drawable/edit_text_focused"
            android:hint="@string/register_layout_ak_admin_pwd_edit_text_hint"
            android:textColorHint="@color/app_default_edit_text_hint_color"
            android:textColor="@color/app_default_text_color"
            android:visibility="gone"
            android:inputType="textPassword"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_default_edit_text_height"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:background="@drawable/edit_text_focused"
            android:id="@+id/playing_mode"
            android:visibility="gone"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/app_default_edit_text_margin"
            android:visibility="gone"
            android:background="@drawable/border"
            android:id="@+id/local_content_mode"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sequential_mode"
                android:layout_margin="@dimen/app_default_edit_text_margin"
                android:text="@string/register_layout_sequential_play_txt"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_mode"
                android:layout_margin="@dimen/app_default_edit_text_margin"
                android:text="@string/register_layout_scheduled_play_txt"/>

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/register_layout_path_layout">

            <EditText
                android:id="@+id/register_layout_path_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_default_edit_text_height"
                android:layout_margin="@dimen/app_default_edit_text_margin"
                android:layout_marginTop="@dimen/app_default_vertical_space"
                android:layout_marginBottom="@dimen/app_default_vertical_space"
                android:paddingLeft="@dimen/app_default_edit_text_horizontal_padding"
                android:background="@drawable/edit_text_focused"
                android:hint="@string/register_layout_path_edit_text_hint"
                android:textColorHint="@color/app_default_edit_text_hint_color"
                android:textColor="@color/app_default_text_color"
                android:inputType="textUri"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/link_button"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/link_button"
                android:layout_margin="@dimen/app_default_edit_text_margin"
                android:src="@drawable/ic_link"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_default_vertical_space"
                android:id="@+id/register_layout_busy_layout"
                android:visibility="gone">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/register_layout_avloadingIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:indicator="LineSpinFadeLoader"
                    android:textColor="@color/app_default_progressbar_indicator_color"
                    android:layout_marginTop="@dimen/app_default_vertical_space"
                    android:layout_marginBottom="@dimen/app_default_vertical_space"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/register_layout_busy_note"
                    android:layout_marginLeft="@dimen/app_default_horizontal_space"
                    android:textColor="@color/app_default_error_alert_color"
                    android:layout_marginTop="@dimen/app_default_horizontal_space"
                    android:text="@string/loading_text"
                    />

            </LinearLayout>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/register_layout_info_text"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/app_default_error_alert_color"
                android:layout_marginLeft="@dimen/app_default_horizontal_space"
                android:layout_marginRight="@dimen/app_default_horizontal_space"
                android:layout_marginBottom="@dimen/app_default_vertical_space"
                />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/text_signage_mgr_access"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="@dimen/activity_default_margin"
            android:visibility="gone"
            android:id="@+id/mac_address_layout">

            <TextView
                android:id="@+id/mac_address_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mac_address_title"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
                android:layout_marginTop="@dimen/signage_mgr_text_vertical_margin"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/mac_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mac_address_title"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
                android:layout_marginBottom="@dimen/signage_mgr_text_vertical_margin"
                android:layout_below="@+id/mac_address_tv_title"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <ImageView
                android:id="@+id/qr_code_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/mac_address_tv"
                android:visibility="gone"

                />

        </RelativeLayout>

        <Button
            android:id="@+id/register_layout_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_layout_register_button_text"
            android:textColor="@color/app_default_button_text_color"
            android:layout_marginTop="@dimen/app_default_vertical_space"
            android:layout_marginBottom="@dimen/app_default_vertical_space"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:onClick="onClick"
            />
    </LinearLayout>

</ScrollView>