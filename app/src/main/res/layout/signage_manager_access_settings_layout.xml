<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_default_margin">

            <TextView
                android:id="@+id/text_signage_mgr_access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signage_mgr_access_settings_text"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
                android:layout_marginTop="@dimen/signage_mgr_text_vertical_margin"
                android:layout_toLeftOf="@+id/toggle_button"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <ToggleButton
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginTop="@dimen/signage_mgr_toggle_btn_vertical_margin"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/signage_mgr_toggle_btn_horizontal_margin"
                android:layout_centerHorizontal="true"
              android:layout_marginRight="@dimen/signage_mgr_toggle_btn_horizontal_margin"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:id="@+id/service_id_info_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/service_id_tv"
                android:textStyle="bold"
                android:textSize="@dimen/app_default_text_view_text_size"
                android:layout_margin="@dimen/activity_default_margin"
                android:textColor="@color/app_default_header_text_color"
                android:text="@string/signage_mgr_access_service_id_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/service_id_tv"
                android:id="@+id/service_id"
                android:textSize="@dimen/app_default_text_view_text_size"
                android:layout_margin="@dimen/activity_default_margin"
                android:textColor="@color/app_service_name_text_clr"
                android:text="@string/signage_mgr_access_service_id_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_blue_edit"
                android:id="@+id/edit_service_id"
                android:layout_marginTop="@dimen/activity_default_margin"
                android:layout_toRightOf="@+id/service_id"
             />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:text="@string/signage_mgr_access_settings_note"/>

</LinearLayout>

</ScrollView>