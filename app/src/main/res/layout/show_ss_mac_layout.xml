<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_signage_mgr_access"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="@dimen/activity_default_margin"
        android:id="@+id/mac_address_layout"
        android:orientation="vertical">


        <TextView
            android:id="@+id/mac_address_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_title"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
            android:layout_marginTop="@dimen/signage_mgr_text_vertical_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:id="@+id/mac_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_title"
            android:gravity="center"
            android:layout_below="@+id/mac_address_tv_title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
            android:layout_marginBottom="@dimen/signage_mgr_text_vertical_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"/>


      <ImageView
        android:id="@+id/qr_code_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
          android:layout_below="@+id/mac_address_tv"
          android:layout_marginBottom="10dp"
          android:layout_above="@+id/note"

          />
    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/note_for_qr_code_scan"
        android:gravity="center"
        android:textColor="#5c7799"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
        android:layout_marginBottom="@dimen/signage_mgr_text_vertical_margin"
        android:textAppearance="@android:style/TextAppearance.Medium"/>


    />

    </RelativeLayout>
