<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/app_default_header_text_color"
            android:textSize="@dimen/app_default_text_view_text_size"
            android:text="@string/restaurants_waiting_list_form"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.8dp"
            android:background="@color/dialog_boarder_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="@dimen/activity_default_margin"
            android:textColor="@color/dialog_boarder_color"
            android:text="@string/restaurants_waiting_list_string"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name(*)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/app_default_header_text_color"
            android:layout_centerVertical="true"
            android:id="@+id/name_tv"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_tv"
            android:hint="Enter Your Name"
            android:singleLine="true"
            android:background="@drawable/rectangle"
            android:id="@+id/name_et"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No(*)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/app_default_header_text_color"
            android:layout_centerVertical="true"
            android:id="@+id/num_tv"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/num_tv"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="10"
            android:hint="Enter Your Number"
            android:background="@drawable/rectangle"
            android:id="@+id/num_et"/>


        <!-- Interactive Optional Data fields -->
        <LinearLayout
            android:id="@+id/optional_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="Optional Data1(150 char)"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="3"
                android:maxLength="250"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLength="150"
                android:text="Optional Data2(150 char)"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data3(150 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data3"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et3"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/optional_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data4(250 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data4"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et4"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data5(150 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data5"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data6(150 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data7(150 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data7"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et7"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optional_layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="Optional Data8(150 char)"
                android:textStyle="bold"
                android:textColor="@color/app_default_header_text_color"
                android:layout_centerVertical="true"
                android:id="@+id/optional_data8"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Enter Text"
                android:background="@drawable/rectangle"
                android:id="@+id/data_et8"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>


    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_btn"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/divider"
            android:layout_margin="@dimen/activity_default_margin"
            android:textColor="@color/app_default_button_text_color"
            android:background="@drawable/button_background"
            android:text="@string/app_default_alert_negative_button_cancel_text"/>

        <View
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:id="@+id/divider"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_btn"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/divider"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_default_margin"
            android:textColor="@color/app_default_button_text_color"
            android:background="@drawable/button_background"
            android:text="@string/app_default_submit_button_txt"/>

    </RelativeLayout>

</RelativeLayout>

