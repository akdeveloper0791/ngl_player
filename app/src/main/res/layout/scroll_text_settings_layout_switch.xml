<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/text_hide_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_scroll_text_settings"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium"/>


    <Switch
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
         android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/scrolling_text_layout"
        android:background="#ece7e4">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrolling_text_mode_rg">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrolling_media_name"
                android:layout_margin="5dp"
                android:text="@string/scrolling_media_name"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_margin="5dp"
                android:id="@+id/scrolling_customized_text"
                android:text="@string/scrolling_customized_text"/>
        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/scrolling_customized_text_layout"
            android:background="#ece7e4">

            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_focused"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:minLines="4"
                android:maxLines="4"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:textSize="18sp"
                android:textColor="#ad000000"
                android:layout_margin="10dp"
                android:focusableInTouchMode="true"
                android:hint="Enter Scroll Text"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:id="@+id/update_scroll_text"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/activity_default_margin"
                android:textColor="@color/app_default_button_text_color"
                android:background="@drawable/button_background"
                android:text="@string/app_default_update_action_button_tv"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>