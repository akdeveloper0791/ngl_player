<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:layout_margin="@dimen/activity_default_margin"
        android:layout_above="@+id/proceed"
        android:id="@+id/mac_address_layout">

        <TextView
            android:id="@+id/mac_address_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_title"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
            android:layout_marginTop="@dimen/signage_mgr_text_vertical_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:id="@+id/mac_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_title"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
            android:layout_marginBottom="@dimen/signage_mgr_text_vertical_margin"
            android:layout_below="@+id/mac_address_tv_title"
            android:textAppearance="@android:style/TextAppearance.Medium"/>


        <ImageView
            android:id="@+id/qr_code_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/note"
            android:layout_below="@+id/mac_address_tv"
            />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_for_qr_code_scan"
            android:gravity="center"
            android:textColor="#5c7799"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/signage_mgr_text_horizontal_margin"
            android:layout_marginBottom="@dimen/signage_mgr_text_vertical_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"/>


    </RelativeLayout>

    <Button
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_default_proceed_text"
        android:textColor="@color/app_default_button_text_color"
        android:layout_marginTop="@dimen/app_default_vertical_space"
        android:layout_marginBottom="@dimen/app_default_vertical_space"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        />


    </RelativeLayout>